@using StokTakip.Shared.Utilities.Results.ComplexTypes
@model StokTakip.Entities.Dtos.RoleListDto
@{
    Layout = "_Layout";
    //ViewBag.Title = "Rol Tanım";
}
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Rol tanım</div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display:none;">
                <span class="sr-only">Yükleniyor...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            @*<th>Rol Açıklaması</th>*@
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            <tr name="@role.Id">
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                @*<td>@role.Description</td>*@
                                <td width="100px">
                                    <button class="btn btn-primary btn-sm btn-update" data-id="@role.Id"><span class="fas fa-edit"></span></button>
                                    <button class="btn btn-danger btn-sm btn-delete" data-id="@role.Id"><span class="fas fa-minus-circle"></span></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}
@section Scripts
{
    <script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}
